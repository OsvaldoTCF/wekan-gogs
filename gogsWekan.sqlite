/* This script creates an initial DB, with default configurations */

CREATE TABLE 'auth' (
	'gogs_url'		varchar,
	'gogs_username'		varchar,
	'gogs_password'		varchar,
	'gogs_token'		varchar,
	'wekan_url'		varchar,
	'wekan_username'	varchar,
	'wekan_password'	varchar,
	PRIMARY KEY(gogs_username)
);

CREATE TABLE 'repos' (
	'repoId'	integer,
	'boardId'	varchar,
	PRIMARY KEY(repoId)
);

CREATE TABLE 'cards' (
	'issueId'	integer,
	'repoName'	varchar,
	'issueIndex'	integer,
	'cardId'	varchar,
	'boardId'	varchar,
	'listId'	varchar,
	PRIMARY KEY(issueId)
);

CREATE TABLE 'cards_prio' (
	'issueId'	integer,
	'repoName'	varchar,
	'issueIndex'	integer,
	'cardId'	varchar,
	'boardId'	varchar,
	'listId'	varchar,
	PRIMARY KEY(issueId)
);

CREATE TABLE 'boards_prio' (
	'wekan_userid'		varchar,
	'prioBoardId'		varchar,
	'prioBacklogListId'	varchar,
	PRIMARY KEY(wekan_userid)
);

CREATE TABLE 'kan_labels' (
	'id'		integer,
	'name'		varchar,
	'color'		varchar,
	PRIMARY KEY(id)
);

